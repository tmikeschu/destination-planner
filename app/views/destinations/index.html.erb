<p id="notice"><%= notice %></p>

<div class="container">

  <h1>All Destinations</h1>

  <div class="row">
  <% @destinations.each do |destination| %>
    <div class="col-sm-6 col-med-4 col-xs-12">
      <h4><%= destination.name %></h4>
      <p><%= destination.zip %></p>
      <p><%= destination.description %></p>
      <%= link_to(image_tag(destination.image_url), destination_path(destination)) %>
      <div>
        <p><%= link_to destination.name, destination %></p>
        <p><%= link_to 'Edit', edit_destination_path(destination) %></p>
        <p><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  <% end %>
  </div>
  <p><%= link_to 'New Destination', new_destination_path %></p>
</div>
